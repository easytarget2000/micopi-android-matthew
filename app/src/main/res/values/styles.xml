<resources>

    <style name="AppTheme.Base" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/launchBackgroundColor</item>

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="ContactPreviewTheme.Base" parent="AppTheme">
        <item name="android:windowBackground">@color/contactPreviewBackground</item>
    </style>

    <style name="ContactPreviewTheme" parent="ContactPreviewTheme.Base" />

    <style name="ContactPreviewSelectable" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="drawableTint">@color/colorPrimary</item>
    </style>

    <style name="MainMenu.CardView" parent="CardView.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

</resources>
