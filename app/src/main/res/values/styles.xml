<resources>

    <style name="AppTheme.MaterialComponents.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.MaterialComponents" parent="AppTheme.MaterialComponents.Base" >
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
    </style>

    <style name="AppTheme.MainMenu" parent="AppTheme.MaterialComponents" />

    <style name="AppTheme.ContactPicker" parent="AppTheme.MaterialComponents" />

    <style name="AppTheme.ContactPreview" parent="AppTheme.MaterialComponents" />

    <style name="AppTheme.Batch" parent="AppTheme.MaterialComponents" />

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="ContactPreviewSelectable" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="drawableTint">?attr/colorPrimary</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/dividerColor</item>
    </style>

</resources>
